<div class="page-header">
  <%= link_to new_loan_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo prestamo
  <% end %>
  <h1>Prestamos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Fecha</th>
            <th>Cantidad</th>
            <th>Estudiante</th>
            <th>Elemento</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @loans) do |loan| %>
            <td><%= loan.date %></td>
            <td><%= loan.quantity %></td>
            <td><%= loan.student %></td>
            <td><%= loan.element %></td>
            <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
